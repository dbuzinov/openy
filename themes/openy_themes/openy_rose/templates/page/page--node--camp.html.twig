{% extends "page.html.twig" %}

{% block page_logo %}
  {% set camp_section_image = '' %}
  {% if camp_section_logo %}
    {% set camp_section_image = file_url(camp_section_logo) %}
    {% if camp_section_image is not empty %}
      <a href="{{ base }}" title="Home" rel="home">
        <img src="{{ camp_section_image }}" alt="Home">
      </a>
    {% else %}
      {# Conditions not met use parent block. #}
      {{ parent() }}
    {% endif %}
  {% else %}
    {# Conditions not met use parent block. #}
    {{ parent() }}
  {% endif %}
{% endblock %}

