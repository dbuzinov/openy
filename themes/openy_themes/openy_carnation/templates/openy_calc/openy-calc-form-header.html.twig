<h2 class="display-6 mb-3">{{ 'Find the Membership Thatâ€™s Best For You'|t }}</h2>
<p class="description purple mb-2">{{ 'Your membership gives you access to all YMCA branch locations!'|t }}</p>

<ul class="nav nav-pills nav-fill mb-5">
  {% set active_step = 1 %}
  {% for step in steps %}
    {% if step.active %}
      {% set active_step = step.number %}
    {% endif %}
  {% endfor %}
  {% for step in steps %}
  <li class="nav-item{% if step.active %} active{% endif %}">
    <div class="step-{{ step.number }}" data-toggle="tab" data-step="{{ step.number }}">
      <span class="nav-pills__text" {% if step.number == active_step %}aria-label="{{ 'current step is'|t }} {{ step.title }}"{% endif %}>{{ step.number }}. {{ step.title }}</span>
    </div>
  </li>
  {% endfor %}
</ul>

