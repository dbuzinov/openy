{#
/**
 * @file
 * Contains sidebar search and menu that is used in mobile layout.
 */
#}

<div id="sidebar" class="sidebar sidebar-left collapse width">
  {% if not is_new_mobile_nav %}
    <form method="get" action="{{ search_view_content_path }}">
      <div class="form-group col-xs-12">
        <div class="input-group">
          <input type="text" name="q" class="form-control">
          <span class="input-group-btn">
            <button class="btn btn-info" type="submit">{{ "Search"|t }}</button>
          </span>
        </div>
      </div>
    </form>
    {% if not hide_mobile_sign_button %}
      <div class="col-xs-12">
        <a class="btn btn-block btn-default" href="https://***REMOVED***/PersonifyEBusiness/Default.aspx?TabID=337">{{ "Sign In"|t }}</a>
      </div>
    {% endif %}
  {% else %}
    <div class="top-bar">
      <a class="home-icon" href="{{ base_path }}" title="{{ "YMCA Twin Cities"|t }}"><i class="fa fa-home" aria-hidden="true"></i></a>
      {% if not hide_mobile_sign_button %}
        <a class="sign-in-icon" href="https://***REMOVED***/PersonifyEBusiness/Default.aspx?TabID=337"><i class="fa fa-user-o" aria-hidden="true"></i></a>
      {% endif %}
      <a class="search-icon" href="#"><i class="fa fa-search" aria-hidden="true"></i></a>
      <button class="sidebar-toggle" data-toggle="collapse" data-target=".sidebar-left"><i class="fa fa-times" aria-hidden="true"></i></button>
    </div>

    <form class="site-search-sidebar collapse" method="get" action="{{ search_view_content_path }}">
      <input type="text" name="q" class="form-control" placeholder="{{ "Search"|t }}">
      <button class="btn btn-info" type="submit"><i class="fa fa-search" aria-hidden="true"></i></button>
    </form>
  {% endif %}
  <ul id="sidebar-nav" class="nav-level-0 nav in"></ul>
</div>
