{% if content.field_content is not empty %}
  <div class="container">
    <div class="row">
      <article{{ attributes.removeClass(header_classes).addClass(content_classes) }}>
        <div class="three-columns">
          <div class="sidebar-region sidebar-region-left hidden-xs col-sm-5 col-md-3">
            <article{{ attributes.removeClass(header_classes).removeClass(content_classes).addClass(sidebar_classes) }}>
              {{ content.field_sidebar_content }}
            </article>
          </div>
          <div class="main-region col-sm-7 col-md-6">
            {{ content.field_content }}
          </div>
          <div class="sidebar-region sidebar-region-extra col-md-3 sidebar-promos promos">
            <article{{ attributes.removeClass(header_classes).removeClass(content_classes).addClass(sidebar_classes) }}>
              {{ content.field_sidebar_content_extra }}
            </article>
          </div>
        </div>
      </article>
    </div>
  </div>
{% endif %}
