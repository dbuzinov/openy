{#
/**
 * @file
 * Display registration form.
 */
#}
<div id="register-or-report" class="slide register-or-report">
    <div class="container">
        <div class="row">
            <div class="buttons">
                <div class="col-xs-6 col-sm-3 col-sm-push-3 col-md-3 col-md-push-3">
                    <a href="#registration" class="btn btn-lg btn-primary blue slide-controller registration-btn">
                        {{ "Register"|t }}
                    </a>
                </div>
                <div class="col-xs-6 col-sm-3 col-sm-push-3 col-md-3 col-md-push-3">
                    <a href="#report" class="btn btn-lg btn-primary purple-medium slide-controller track-activity-btn">
                        {{ "Track Activity"|t }}
                    </a>
                </div>
            </div>
        </div>
        <div class="row">
            <p>
                {{ "Enjoy your visits, report your activities,<br/>see the results and win cool prizes."|t }}
            </p>
        </div>
    </div>
</div>
<div id="registration" class="slide slide-inactive registration">
    <div class="container">
        <div class="row">
            <div class="registration-form">
                {{ form }}
            </div>
        </div>

        <div class="row access-help">
            <div class="access-question">
                <a href="#" class="where-can-i-find">{{ "Where can I find my Facility Access ID?"|t }}</a>
            </div>

            <div class="access-answer">
                <p>{{ "Please find your facility access ID below the barcode."|t }}</p>
                <p class="note">
                    {{ "(please note it might be on the front of the card on older membership cards)"|t }}
                </p>
                <div class="hand"></div>
            </div>
        </div>
    </div>
</div>
