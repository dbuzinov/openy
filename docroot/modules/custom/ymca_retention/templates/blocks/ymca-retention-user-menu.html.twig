{#
/**
 * @file
 * Display user menu on the page.
 */
#}
<div class="ysr-user-menu">
  <div class="ysr-user-menu__greetings login ng-hide"
       data-ng-show="retentionC.storage.member">
    <span>{{ 'Hi, @first_name!'|t({ '@first_name': '{{retentionC.storage.member.firstName}}' }) }}</span>
  </div>
  <div class="ysr-user-menu__logout ng-hide"
       data-ng-show="retentionC.storage.member"
       data-ng-click="retentionC.storage.memberCookieRemove()">
    <a href="#">{{ 'Sign-out'|t }}</a>
  </div>
  <div class="ysr-user-menu__logout" data-ng-show="!retentionC.storage.member">
    <a href="#" data-toggle="modal" data-target="#ymca-retention-modal" data-type="register">{{ 'Register'|t }}</a>
  </div>
  <div class="ysr-user-menu__greetings" data-ng-show="!retentionC.storage.member">
    <a href="#" data-toggle="modal" data-target="#ymca-retention-modal" data-type="login">{{ 'Sign-in'|t }}</a>
  </div>
  <div class="ysr-user-menu__forms" style="display: none;">
    <div id="ymca-retention-user-menu-register-form" class="ysr-user-menu__form" data-type="register">
      {{ content.register_form }}
    </div>
    <div id="ymca-retention-user-menu-login-form" class="ysr-user-menu__form" data-type="login">
      {{ content.login_form }}
    </div>
    <div id="ymca-retention-user-menu-reg-confirmation-form" class="ysr-user-menu__form" data-type="reg-confirmation">
      {% include '@ymca_retention/blocks/ymca-retention-register-confirmation-modal.html.twig' %}
    </div>
  </div>
</div>
