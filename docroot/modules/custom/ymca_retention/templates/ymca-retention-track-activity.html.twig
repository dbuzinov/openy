{#
/**
 * @file
 * Display track activity block.
 */
#}
<div id="activity-app" data-ng-controller="ActivityController">
  <div class="campaign-dates ng-hide" data-ng-show="dates.length > 0">
    <div class="container">
      <div class="campaign-dates--slider-container" slick settings="slickConfig">
        <div class="campaign-dates--date" data-ng-repeat="date in dates" data-ng-class="dateClass($index)">
          <span class="weekday">{{ '{{date.weekday}}' }}</span>
          <a data-ng-click="setDate($index)"><span class="month-day">{{ '{{date.month_day}}' }}</span></a>
          <span class="activities-count" data-ng-bind="activitiesCount($index)"></span>
        </div>
      </div>
    </div>
  </div>

  <div class="activities">
    <div class="container">
      <div class="row">

        <div class="activity-groups">
          <div class="activity-group-item" data-ng-repeat="activity_group in activity_groups">
            <a class="activity-group-item-link" data-ng-class="activityGroupClass($index)" data-ng-click="setActivityGroup($index)">
              {{ '{{activity_group.name}}' }}
            </a>
          </div>
        </div>

        <div class="activity-items ng-hide"
             data-ng-repeat="activity_group in activity_groups"
             data-ng-show="activityItemsShow($index)">
          <div class="col-xs-12 col-sm-4" data-ng-repeat="activity in activity_group.activities">
            <div class="form-item-checkbox">
              <input id="checkbox-{{ '{{activity.id}}' }}" type="checkbox"
                     data-ng-model="member_activities[dates[date_index].timestamp][activity.id]"
                     data-ng-change="activityItemChange(activity.id)"
                     data-ng-disabled="progress.active()">
              <label for="checkbox-{{ '{{activity.id}}' }}">{{ '{{activity.name}}' }}<small>{{ '{{activity.description}}' }}</small></label>
            </div>
          </div>
        </div>

      </div>
      <div class="actions"></div>
    </div>
  </div>
</div>
