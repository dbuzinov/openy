use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function ab_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the ab module.
    case 'help.page.ab':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('AB Testing FrameWork') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_page_attachments().
 */
function ab_page_attachments(array &$attachments) {
  // Try to load block.
  $block = \Drupal\block\Entity\Block::load('top_menu_2');
  // If there is no block try to create it.
  if (is_null($block)) {
    $config_manager = Drupal::service('config.manager');
    $entity_storage = $config_manager->getEntityManager()->getStorage('block');
    $block = $entity_storage->create([
      'id' => 'top_menu_2',
      'theme' => 'ymca',
      'plugin' => 'system_menu_block:top_menu_2',
    ]);

    $block->save();
  }
  $build = \Drupal::getContainer()->get('entity.manager')->getViewBuilder('block')->view($block);

  $renderer = \Drupal::service('renderer');
  $result = $renderer->renderRoot($build);

  $attachments['#attached'] = ['drupalSettings' => ['hehe' => 'render']];
}
