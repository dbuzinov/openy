{#
/**
 * @file
 * Mindbody products list template.
 *
 * Available variables:
 * - attributes: HTML attributes for the containing element.
 *
 * @ingroup themeable
 */
#}
<div class="panel panel-default content-expander">
  <div class="panel-heading">
    <div class="panel-title">
      <h2>
        <a class="accordion-toggle" data-parent=".panel-group" data-toggle="collapse" href="#collapse-mindbody-products-list-location">
          {{ 'Purchase One-on-One Personal Training'|t }}
        </a>
      </h2>
    </div>
  </div>

  <div class="panel-collapse in" id="collapse-mindbody-products-list-location">
    <div class="panel-body">

      <div class="row mindbody-products-list-location">
        <div class="container">
          <div class="col-sm-12 col-md-6">
            <h3>{{ 'Members'|t }}</h3>
            {% for key, product_list in products_to_display_member %}
            <strong>{{ key  }}-minute sessions</strong>
            <ul>
              {% for key, product in product_list %}
              <li><a href="{{ product.url }}" target="_blank">
                {% if product.show_special_prices and product.special_price %}
                  ${{ product.special_price }}
                {% else %}
                  ${{ product.price }}
                {% endif %}
                for {{ product.package }}
              </a></li>
              {% endfor %}
            </ul>
            {% endfor %}
          </div>
          <div class="col-sm-12 col-md-6">
            <h3>{{ 'Non-members'|t }}</h3>
            {% for key, product_list in products_to_display_non_member %}
            <strong>{{ key  }}-minute sessions</strong>
            <ul>
              {% for key, product in product_list %}
              <li><a href="{{ product.url }}" target="_blank">
                {% if product.show_special_prices and product.special_price %}
                  ${{ product.special_price }}
                {% else %}
                  ${{ product.price }}
                {% endif %}
                for {{ product.package }}
              </a></li>
              {% endfor %}
            </ul>
            {% endfor %}
          </div>
        </div>
      </div>

    </div>
  </div>
</div>
