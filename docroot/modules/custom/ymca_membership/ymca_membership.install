/**
 * Implements hook_install().
 */
function ymca_membership_install() {

  $blocks_content = _ymca_membership_blocks_content();
  foreach ($blocks_content as $info => $block_content) {
    $content = [
      'value' => $block_content,
      'format' => 'full_html',
    ];
    $block_content = entity_create('block_content', array(
      'info' => $info,
      'type' => 'date_block',
      'langcode' => 'en',
      'field_content_date_before' => $content,
      'field_content_date_between' => $content,
      'field_content_date_end' => $content,
      'field_end_date' => ['value' => '2016-02-25T17:04:32'],
      'field_start_date' => ['value' => '2016-02-25T17:04:32'],
    ));
    $block_content->save();
  }
}

