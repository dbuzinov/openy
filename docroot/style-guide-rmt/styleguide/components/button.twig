{% block button %}
<div class="container">
  <div class="main-component">
    <h2 class="block-title">Button normal style</h2>
    <p>
      <a class="btn" href="#">Default</a>
      <a class="btn btn--orange" href="#">Background Orange</a>
      <a class="btn btn--blue" href="#">Background Blue</a>
      <a class="btn btn--green" href="#">Background Green</a>
      <a class="btn btn--purple" href="#">Background Purple</a>
    </p>

    <h2 class="block-title">Button Has Icon</h2>
    <p>
      <a class="btn btn--has-icon" href="#"><span class="icon-spinner"></span>Default</a>
      <a class="btn btn--has-icon btn--orange " href="#"><span class="icon-calendar icon--orange"></span>Background Orange</a>
      <a class="btn btn--has-icon btn--blue" href="#"><span class="icon-calendar icon--blue"></span>Background Blue</a>
      <a class="btn btn--has-icon btn--green" href="#"><span class="icon-calendar icon--green"></span>Background Green</a>
      <a class="btn btn--has-icon btn--purple" href="#"><span class="icon-calendar icon--purple"></span>Background Purple</a>
    </p>

    <h2 class="block-title">Links style</h2>
      <p>
        <a class="link" href="#A3">
          View tips: preparing for lessons
        </a>
      </p>
      <p>
        <a class="link link--has-icon link--has-icon--blue" href="#A3">
          <span class="icon-light-bulb"></span>View tips: preparing for lessons<span class="icon-chevron-small-right"></span>
        </a>
        </p>
      <p>
        <a class="link link--has-icon link--has-icon--purple" href="#A3"><span class="icon-light-bulb"></span>View tips: preparing for lessons<span class="icon-chevron-small-right"></span>
        </a>
      </p>
      <p>
        <a class="link link--has-icon link--has-icon--green" href="#A3"><span class="icon-light-bulb"></span>View tips: preparing for lessons<span class="icon-chevron-small-right"></span>
        </a>
      </p>
      <p>
        <a class="link link--has-icon link--has-icon--orange" href="#A3"><span class="icon-light-bulb"></span>View tips: preparing for lessons<span class="icon-chevron-small-right"></span>
        </a>
      </p>
  </div>
</div>
{% endblock %}
