<form class="filter-form">
  <div class="filter-form__times">
    <select class="chosen-select">
      <option value="">Time of Day</option>
      <option value="">Morning</option>
      <option value="">Afternoon</option>
      <option value="">Evening</option>
      <option value="">All Day</option>
      <option value="">Overnight</option>
    </select>
  </div>

  <fieldset class="filter-form__days filter-form__fieldset">
      <ul>
        <li>
          <input type="checkbox" name="week" value="Monday" id="Monday" />
          <label for="Monday">Monday</label>
        </li>
        <li>
          <input type="checkbox" name="week" value="Tuesday" id="Tuesday" />
          <label for="Tuesday">Tuesday</label>
        </li>
        <li>
          <input type="checkbox" name="week" value="Wednesday" id="Wednesday" />
          <label for="Wednesday">Wednesday</label>
        </li>
        <li>
          <input type="checkbox" name="week" value="Thursday" id="Thursday" />
          <label for="Thursday">Thursday</label>
        </li>
        <li>
          <input type="checkbox" name="week" value="Friday" id="Friday" />
          <label for="Friday">Friday</label>
        </li>
        <li>
          <input type="checkbox" name="week" value="Weekend" id="Weekend" />
          <label for="Weekend">Weekend</label>
        </li>
      </ul>
  </fieldset>

  <input type="checkbox" id="show-more-less">
  <label for="show-more-less" class="filter-form__show-more">Filters</label>

  <div id="show-filter" class="filter-form__container" style="display: none">
    <fieldset class="filter-form__fieldset">
      <legend>YMCA Location</legend>
      <ul>
        <li>
          <input type="checkbox" id="location-1" />
          <label for="location-1">Minneapolis/West Metro</label>
        </li>
        <li>
          <input type="checkbox" id="location-2" />
          <label for="location-2">St. Paul/East Metro</label>
        </li>
        <li>
          <input type="checkbox" id="location-3" />
          <label for="location-3">North Metro</label>
        </li>
        <li>
          <input type="checkbox" id="location-4" />
          <label for="location-4">South Metro</label>
        </li>
        <li>
          <input type="checkbox" id="location-5" />
          <label for="location-5">Andover</label>
        </li>
        <li>
          <input type="checkbox" id="location-6" />
          <label for="location-6">Blaisdell</label>
        </li>
        <li>
          <input type="checkbox" id="location-7" />
          <label for="location-7">Burnsville</label>
        </li>
        <li>
          <input type="checkbox" id="location-8" />
          <label for="location-8">Eagan</label>
        </li>
        <li>
          <input type="checkbox" id="location-9" />
          <label for="location-9">Elk River</label>
        </li>
        <li>
          <input type="checkbox" id="location-10" />
          <label for="location-10">Emma B. Howe - Coon Rapids</label>
        </li>
        <li>
          <input type="checkbox" id="location-11" />
          <label for="location-11">Hastings</label>
        </li>
        <li>
          <input type="checkbox" id="location-12" />
          <label for="location-12">Heritage Park</label>
        </li>
      </ul>
    </fieldset>

    <fieldset class="filter-form__fieldset">
      <legend>Program Dates</legend>
      <ul>
        <li class="filter-form__date-select">
          <input type="text" placeholder="From date">
          <input type="image" src="images/calendar.svg" alt="Calendar">
        </li>
        <li class="filter-form__date-select">
          <input type="text" placeholder="To date">
          <input type="image" src="images/calendar.svg" alt="Calendar">
        </li>
      </ul>
    </fieldset>

    <fieldset class="filter-form__fieldset">
      <legend>Cost</legend>
      <ul>
        <li>
          <input type="checkbox" id="cost">
          <label for="cost">Free for YMCA Members</label>
        </li>
      </ul>
    </fieldset>

    <fieldset class="filter-form__fieldset">
      <legend>Level</legend>
      <ul>
        <li>
          <input type="radio" id="level-0" name="level">
          <label for="level-0">Beginner</label>
        </li>
        <li>
          <input type="radio" id="level-1" name="level">
          <label for="level-1">Experience Required</label>
        </li>
        <li>
          <input type="radio" id="level-2" name="level">
          <label for="level-2">Any Level</label>
        </li>
      </ul>
    </fieldset>

    <fieldset class="filter-form__fieldset">
      <legend>Age</legend>
      <ul>
        <li>
          <input type="radio" id="age-0" name="age">
          <label for="age-0">Baby &amp; Toddler</label>
        </li>
        <li>
          <input type="radio" id="age-1" name="age">
          <label for="age-1">School Age</label>
        </li>
        <li>
          <input type="radio" id="age-2" name="age">
          <label for="age-2">Pre-Teens</label>
        </li>
        <li>
          <input type="radio" id="age-3" name="age">
          <label for="age-3">Teens</label>
        </li>
        <li>
          <input type="radio" id="age-4" name="age">
          <label for="age-4">Any Age</label>
        </li>
      </ul>
    </fieldset>

    <fieldset class="filter-form__search-autocomplete filter-form__fieldset">
      <span>
        <input type="text" placeholder="Search">
      </span>
    </fieldset>

    <fieldset class="filter-form__fieldset filter-form__search-button">
      <input class="button button--purple" type="submit" name="submit" value="Apply filters">
    </fieldset>
  </div>
</form>