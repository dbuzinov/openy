{#
/**
 * @file
 * News & Events block template.
 *
 * Available variables:
 * - items: Blog post items;
 *
 * @ingroup themeable
 */
#}

{% for item in items %}
  <div class="post-excerpt clearfix">
    <div class="post-excerpt-content">
      <h2 class="post-title">{{ item.title }}</h2>
      <article class="richtext">{{ item.text|raw }}</article>
      <p class="comments_count">
        {{ item.read_more }}
        <a href="{{ item.read_more_url }}" class="read-more">{{ 'Continue Reading'|t }}</a>
      </p>
    </div>
  </div>
{% endfor %}
