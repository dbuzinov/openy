/**
 * @file
 * Install, update and uninstall functions for the openy_prgf_3с feature.
 */

/**
 * Implements hook_uninstall().
 */
function openy_prgf_3c_uninstall() {
  $modules_manager = \Drupal::service('openy.modules_manager');
  $modules_manager->removeEntityBundle('paragraph', 'paragraphs_type', '3c');
  $modules_manager->removeModuleConfigs('openy_prgf_3c');
}

/**
 * Implements hook_update_dependencies().
 */
function openy_prgf_3c_update_dependencies() {
  $dependencies['openy_prgf_3c'] = [
    8003 => [
      'openy' => 8059,
    ],
  ];

  return $dependencies;
}

