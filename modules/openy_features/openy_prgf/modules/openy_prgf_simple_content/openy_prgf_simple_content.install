<?php

/**
 * @file
 * OpenY Paragraph Simple content install file.
 */

/**
 * Implements hook_uninstall().
 */
function openy_prgf_simple_content_uninstall() {
  \Drupal::service('openy.modules_manager')
    ->removeEntityBundle('paragraph', 'paragraphs_type', 'simple_content');
}

/**
 * Update description for field.
 */
function openy_prgf_simple_content_update_8001() {
  $config_importer = \Drupal::service('openy_upgrade_tool.param_updater');
  $config = drupal_get_path('module', 'openy_prgf_simple_content');
  $config .= '/config/install/';
  $config .= 'field.field.paragraph.simple_content.field_prgf_description.yml';
  $config_importer->update(
    $config,
    'field.field.paragraph.simple_content.field_prgf_description',
    'description'
  );
}
