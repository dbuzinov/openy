{#
/**
 * @file
 *
 * Available variables:
 * - content: contains all data.
 *
 * @ingroup themeable
 */
#}
<div class="openy-repeat--pdf--table--day">
  <div class="content">
    {% for key, item in content.result %}
      <div class="header">
        <div class="branding">
          <img src="{{ content.logo_url }}" width="100" height="86" />
        </div>
        <div class="title">
          <strong>{{ key|replace({'|': "<br/>"})|raw }} | {{ content.header.dates }}</strong>
        </div>
      </div>
      {% for key, item in item %}
        <table>
          <thead>
            <tr>
              <th colspan="4">{{ key }}</th>
            </tr>
          </thead>
          <tbody>
          {% for key, item in item %}
            {% for item in item %}
              <tr>
                <td class="time">{{ key }}</td>
                <td class="name">{{ item.name }}</td>
                <td class="room">{{ item.room }}</td>
                <td class="instructor">{{ item.instructor }}</td>
              </tr>
            {% endfor %}
          {% endfor %}
          </tbody>
        </table>
      {% endfor %}
      <tocpagebreak/>
    {% endfor %}
  </div>
</div>
